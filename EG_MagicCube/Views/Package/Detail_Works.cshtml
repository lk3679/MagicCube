@model EG_MagicCube.Models.ViewModel.PackageViewModel

@{
    Layout = "~/Views/Shared/_LayoutNonli.cshtml";
    ViewBag.Title = @Html.DisplayFor(model => model.PG_Name);
}

<h2>@Html.DisplayFor(model => model.PG_Name)</h2>
<div class="form-horizontal">
    <hr />
    @if (Model.WorksList != null && Model.WorksList.Count > 0 && Model.EndDate >= DateTime.Now)
    {
        <p>推薦作品：@Html.DisplayFor(model => model.WorksAmount)</p>
        <p>@Html.DisplayNameFor(model => model.Summary)：@Html.DisplayFor(model => model.Summary)</p>
        @*<p>@Model.EndDate</p>*@
        <hr />
        <div class="row">
            @foreach (var items in Model.WorksList)
            {
                <div class="col-md-4 ">
                    <div class="col-xs-12 thumbnail selected ">
                        <div class="col-xs-12" style="padding:5px;">
                            <img class=".img-responsive" data-original="@items.MiniImg" alt="Red dot" style="max-width:350px;" />
                        </div>
                        <div class="col-xs-12 bf-caption">
                            <a target="_blank" href="@Url.Action("Details", "Works", new { id = items.No, p = Model.PG_No })">
                                <h4>@items.Name</h4>
                                <p>@items.Author - @items.Price (萬)</p>
                            </a>
                        </div>
                    </div>
                </div>
            }
        </div>
    }
    else
    {
        @Html.Action("Expired");
    }
</div>

@section Scripts {
    @Scripts.Render("~/bundles/jqueryval")
    <script src="@Url.Content("~/Scripts/jquery.lazyload.js")"></script>
    <script>
        $("img").lazyload({
            effect: "fadeIn",
            effectspeed: 1000
        });
    </script>
}