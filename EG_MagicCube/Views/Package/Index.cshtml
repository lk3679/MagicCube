@model IEnumerable<EG_MagicCube.Models.ViewModel.PackageViewModel>

@{
    ViewBag.Title = "包裝列表";
}

<h2>包裝清單</h2>

<p>
    @Html.ActionLink("新增包裝", "Create", "Package", new { @class = "btn btn-default" })
</p>
@using (Html.BeginForm())
{
    <div class="search">
        <div class="col-lg-6 col-md-6 ">
            @Html.DisplayNameFor(model => model.PG_Name): <input type="text" name="PG_Name" class="form-control text-box single-line" />
        </div>
        <div class="col-lg-2 col-md-4 col-sm-6 col-xs-8 ">
            排序: <select class="form-control " tabindex="-1" name="Sort">
                <option value="ASC">建立日期由舊到新</option><
                <option value="DESC">建立日期由新到舊</option>
            </select>
        </div>
        <div class="col-lg-12 col-md-12 col-sm-12 col-xs-12  text-right">
            <input type="submit" name="search-btn" class="btn btn-default" value="篩選" />
        </div>
    </div>
}
<table class="table">
    <tr>

        <th>
            @Html.DisplayNameFor(model => model.PG_Name)
        </th>
        <th>
            @Html.DisplayNameFor(model => model.EndDate)
        </th>
        @*<th>
            @Html.DisplayNameFor(model => model.CreateDate)
        </th>*@
        <th>
            @Html.DisplayNameFor(model => model.WorksAmount)
        </th>
        <th></th>
    </tr>

    @if (Model != null)
    {
        foreach (var item in Model)
        {
            <tr>

                <td>
                    @Html.DisplayFor(modelItem => item.PG_Name)
                </td>
                <td>
                    @Html.DisplayFor(modelItem => item.EndDate)
                </td>
                @*<td>
                    @Html.DisplayFor(modelItem => item.CreateDate)
                </td>*@
                <td>
                    @Html.DisplayFor(modelItem => item.WorksAmount)
                </td>
                <td>
                    @Html.ActionLink("編輯", "Edit", new { id = item.PG_No }) 
                </td>
            </tr>
        }
    }
</table>
<div class="pull-right">
    @if (ViewBag.pi > 0)
    {
        @Html.ActionLink("前一頁 ", "Index", new { p = (ViewBag.pi - 1) })
    }
    @if (ViewBag.pi > 0 && ViewBag.pn > 0) { <text> | </text> }
    @if (ViewBag.pn > 0)
    {
        @Html.ActionLink("後一頁", "Index", new { p = (ViewBag.pn) })
    }
</div>