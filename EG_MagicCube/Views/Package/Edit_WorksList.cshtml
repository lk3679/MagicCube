<div class="form-horizontal col-lg-10 col-md-10">
    @*<h4>PackageViewModel</h4>*@
    @*<hr />*@
    @Html.ValidationSummary(true, "", new { @class = "text-danger" })
    <div class="form-group">
        @*@Html.LabelFor(model => model.PG_No, htmlAttributes: new { @class = "control-label col-md-2" })*@
        <div class="col-md-10 modelcont">
            @Html.HiddenFor(model => model.PG_No, new { htmlAttributes = new { @class = "form-control " } })
        </div>
    </div>

    @*<div class="form-group">
            @Html.LabelFor(model => model.PG_Name, htmlAttributes: new { @class = "control-label col-md-2" })
            <div class="col-md-10 modelcont">
                @Html.DisplayFor(model => model.PG_Name)
