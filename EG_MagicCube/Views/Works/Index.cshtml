@model IEnumerable<EG_MagicCube.Models.ViewModel.WorksViewModel>

@{
    ViewBag.Title = "作品列表";
}

<h2>作品列表</h2>
<p>
    @Html.ActionLink("新增作品", "Create", "Works", null, new { @class = "btn btn-success" })
    @Html.ActionLink("更新庫存", "RenewStock", "Works", null, new { @class = "btn btn-primary" })
</p>

@using (Html.BeginForm())
{
    <div class="search wrapper">
        <div class="row form-horizontal">
            <div class="form-group">
                <label class="control-label col-md-2">
                    @Html.DisplayNameFor(model => model.AuthorNoList)
                </label>
                <div class="col-md-4">
                    @Html.DropDownList("AuthorNoList", (IEnumerable<SelectListItem>)ViewBag.WorksAuthors, new { @class = "js-example-basic-multiple js-states form-control", @multiple = "multiple" })
                    <input type="hidden" name="AuthorNo_InputStringHide" id="AuthorNo_InputStringHide" value="@ViewBag.AuthorNoList" />
                </div>
                <label class="control-label col-md-1">
                    @Html.DisplayName("商品定價")
                </label>
                <div class="col-md-3" style="padding:0;">
                    <div class="col-xs-6">
                        <span class="numberprice">
                            <input type="text" class="form-control text-box single-line" />
                            <input type="number" name="MinePrice" class="form-control text-box single-line" value="@ViewBag.MinePrice" />
                        </span>
                    </div>
                    <div class="col-xs-6">
                        <span class="numberprice">
                            <input type="text" class="form-control text-box single-line" />
                            <input type="number" name="MaxPrice" class="form-control text-box single-line" value="@ViewBag.MaxPrice" />
                        </span>
                    </div>
                </div>
            </div>
            <div class="form-group">
                <label class="control-label col-md-2">
                    @Html.DisplayNameFor(model => model.WorksName)
                </label>
                <div class="col-md-4">
                    <input type="text" name="WorksName" class="form-control text-box single-line" value="@ViewBag.WorksName" />
                </div>
                <label class="control-label col-md-1">
                    排序
                </label>
                <div class="col-md-3">
                    @Html.DropDownList("Sort", (SelectList)ViewBag.MeunOrderList, new { @class = "form-control" })
                </div>
            </div>
            <div class="form-group">
                <label class="control-label col-md-2">
                    @Html.DisplayName("作品年代")
                </label>
                <div class="col-md-3">
                    <div class="col-xs-6">
                        <input type="text" name="WorkStartYear" class="form-control text-box single-line" value="@ViewBag.WorkStartYear" />

                    </div>
                    <div class="col-xs-6">
                        <input type="text" name="WorkEndYear" class="form-control text-box single-line" value="@ViewBag.WorkEndYear" />

                    </div>
                </div>
                <label class="control-label col-md-2">
                    @Html.DisplayName("出生年")
                </label>
                <div class="col-md-3">
                    <div class="col-xs-6">
                        <input type="text" name="BirthStartYear" class="form-control text-box single-line" value="@ViewBag.BirthStartYear" />

                    </div>
                    <div class="col-xs-6">
                        <input type="text" name="BirthEndYear" class="form-control text-box single-line" value="@ViewBag.BirthEndYear" />

                    </div>
                </div>
             </div>
            <div class="form-group">
                <label class="control-label col-md-2">
                    作品尺幅
                </label>
                <div class="col-md-3">
                    <input type="hidden" id="WorksSizeNo_InputStringHide" value="@ViewBag.WorksSizeNo_InputString" /> 
                    @Html.DropDownList("WorksSizeNo_InputString", (IEnumerable<SelectListItem>)ViewBag.WorksSizeList, new { @class = "js-example-basic-multiple js-states form-control", @multiple = "multiple" })
                </div>

                <label class="control-label col-md-2">
                    藝術家標籤
                </label>
                <div class="col-md-3">
                    <input type="hidden" id="AuthorsTagNo_InputStringHide" value="@ViewBag.AuthorsTagNo_InputString" />      
                    @Html.DropDownList("AuthorsTagNo_InputString", (IEnumerable<SelectListItem>)ViewBag.AuthorTagList, new { @class = "js-example-basic-multiple js-states form-control", @multiple = "multiple" })
                </div>
              </div>
            <div class="form-group">
                <label class="control-label col-md-2">
                    性別
                </label>
                <div class="col-md-3">
                    <input type="hidden" id="AuthorsGender_InputStringHide" value="@ViewBag.AuthorsGender_InputString" /> 
                    @Html.DropDownList("AuthorsGender_InputString", (IEnumerable<SelectListItem>)ViewBag.AuthorsGenderLsit, new { @class = "js-example-basic-multiple js-states form-control", @multiple = "multiple" })
                </div>

                <label class="control-label col-md-2">
                    作品風格
                </label>
                <div class="col-md-3">
                    <input type="hidden" id="WorksPropStyle_InputStringHide" value="@ViewBag.WorksPropStyle_InputString" /> 
                    @Html.DropDownList("WorksPropStyle_InputString", (IEnumerable<SelectListItem>)ViewBag.WorksPropStyleList, new { @class = "js-example-basic-multiple js-states form-control", @multiple = "multiple" })
                </div>
            </div>

            <div class="form-group">
                <label class="control-label col-md-2">
                    作品類型
                </label>
                <div class="col-md-3">
                    <input type="hidden" id="WorksGenreList_InputStringHide" value="@ViewBag.WorksGenreList_InputString" /> 
                    @Html.DropDownList("WorksGenreList_InputString", (IEnumerable<SelectListItem>)ViewBag.WorksGenreList, new { @class = "js-example-basic-multiple js-states form-control", @multiple = "multiple" })
                </div>

                <label class="control-label col-md-2">
                    存放地
                </label>
                <div class="col-md-3">
                    <input type="hidden" id="WorksWareTypeList_InputStringHide" value="@ViewBag.WorksWareTypeList_InputString" /> 
                    @Html.DropDownList("WorksWareTypeList_InputString", (IEnumerable<SelectListItem>)ViewBag.WorksWareTypeList, new { @class = "js-example-basic-multiple js-states form-control", @multiple = "multiple" })
                </div>

               
            </div>

            <div class="form-group">
                

                <label class="control-label col-md-2">
                    所有人
                </label>
                <div class="col-md-3">
                    <input type="hidden" id="WorksPropOwnerList_InputStringHide" value="@ViewBag.WorksPropOwnerList_InputString" />
                    @Html.DropDownList("WorksPropOwnerList_InputString", (IEnumerable<SelectListItem>)ViewBag.WorksPropOwnerList, new { @class = "js-example-basic-multiple js-states form-control", @multiple = "multiple" })
                </div>
            </div>

                <div class="form-group">
                    <div class="col-md-2 col-xs-3 text-right">
                        <input type="button" id="delete-btn" data-url="@Url.Action("Delete")" class="btn btn-danger pull-right fixed-top" value="刪除" style="visibility:hidden;">
                    </div>
                    <div class=" col-md-8 text-right">
                        <input type="submit" name="search-btn" class="btn btn-info" value="篩選" />
                    </div>
                </div>

            </div>
    </div>
}

<table class="table ">
    <tr>
        <th>
            <input type="checkbox" id="checkall" class="" />
        </th>
        <th class="col-md-1">
            @Html.DisplayNameFor(model => model.AuthorsName)
        </th>
        <th class="col-md-3">
            @Html.DisplayNameFor(model => model.WorksName)
        </th>     
        <th class="col-md-1">
            作品年代
        </th>
        <th class="col-md-2">
            @Html.DisplayNameFor(model => model.Material)
        </th>
        <th class="col-md-1">
            @Html.DisplayNameFor(model => model.WorkSize)
        </th>
        <th class="col-md-1">
            @Html.DisplayName("商品定價")
        </th>
        <th class="col-md-2"></th>
    </tr>
    @if (Model != null)
    {
        foreach (var item in Model)
        {
            <tr>
                <td class="">
                    <input type="checkbox" id="@item.WorksNo" class="delcheck" />
                </td>
                <td class="col-md-1">
                    @Html.DisplayFor(modelItem => item.AuthorsName)
                </td>
                <td class="col-md-3">
                    @Html.DisplayFor(modelItem => item.WorksName)
                </td>           
                <td class="col-md-1">
                    @Html.DisplayFor(modelItem => item.YearStart) @( item.YearStart == item.YearEnd ? "" : "~" + item.YearEnd.ToString())
                </td>
                <td class="col-md-2">
                    @Html.DisplayFor(modelItem => item.Material)
                </td>
                <td class="col-md-1">
                    @Html.DisplayFor(modelItem => item.WorkSize)
                </td>
                <td class="col-md-1">
                    @*@Html.DisplayFor(modelItem => item.Price)*@
                    @item.Price.ToString("#,#")
                </td>
                <td class="col-md-2">
                    <div>
                        @Html.ActionLink("編輯", "Edit", new { id = item.WorksNo }) |
                        @Html.ActionLink("介紹", "Details", new { id = item.WorksNo }) |
                        @Html.ActionLink("編輯圖片", "Edit", "Files", new { id = item.WorksNo }, new { })
                    </div>
                </td>
            </tr>
        }
    }

</table>
<div class="pull-right">
    @if (ViewBag.pi > 0)
    {
        @Html.ActionLink("前" + (string)ViewBag.pt + "筆 ", "Index", new { p = (ViewBag.pi - 1), name = ViewBag.WorksName, mip = ViewBag.MinePrice, mxp = ViewBag.MaxPrice, sort = ViewBag.OrderbyType, artlist = ViewBag.AuthorNoList, WorkStartYear=ViewBag.WorkStartYear, WorkEndYear = ViewBag.WorkEndYear , BirthStartYear=ViewBag.BirthStartYear, BirthEndYear=ViewBag.BirthEndYear, WorksSizeNo_InputString=ViewBag.WorksSizeNo_InputString, AuthorsTagNo_InputString=ViewBag.AuthorsTagNo_InputString, AuthorsGender_InputString=ViewBag.AuthorsGender_InputString, WorksPropStyle_InputString=ViewBag.WorksPropStyle_InputString, WorksGenreList_InputString=ViewBag.WorksGenreList_InputString, WorksPropOwnerList_InputString=ViewBag.WorksPropOwnerList_InputString, WorksWareTypeList_InputString = ViewBag.WorksWareTypeList_InputString })
    }
    @if (ViewBag.pi > 0 && ViewBag.pn > 0)
    { <text> | </text> }
    @if (ViewBag.pn > 0)
    {
        @Html.ActionLink("後" + (string)ViewBag.pt + "筆 ", "Index", new { p = (ViewBag.pn),name= ViewBag.WorksName, mip = ViewBag.MinePrice, mxp = ViewBag.MaxPrice, sort = ViewBag.OrderbyType, artlist = ViewBag.AuthorNoList, WorkStartYear = ViewBag.WorkStartYear, WorkEndYear = ViewBag.WorkEndYear, BirthStartYear = ViewBag.BirthStartYear, BirthEndYear=ViewBag.BirthEndYear,WorksSizeNo_InputString = ViewBag.WorksSizeNo_InputString, AuthorsTagNo_InputString = ViewBag.AuthorsTagNo_InputString, AuthorsGender_InputString = ViewBag.AuthorsGender_InputString, WorksPropStyle_InputString = ViewBag.WorksPropStyle_InputString, WorksGenreList_InputString = ViewBag.WorksGenreList_InputString, WorksPropOwnerList_InputString = ViewBag.WorksPropOwnerList_InputString, WorksWareTypeList_InputString = ViewBag.WorksWareTypeList_InputString })
    }
</div>
@section Scripts {
    @Scripts.Render("~/bundles/jqueryval")
    <script src="@Url.Content("~/Scripts/deleteforlist.js")"></script>
    <script src="@Url.Content("~/Scripts/numberprice.js")"></script>
    <script>
        $.when($(".js-example-basic-multiple").select2({ width: '100%' })).then(function () {
            var oAuthorNo = $('#AuthorNo_InputStringHide').val().split(',');
            for (var i = 0; i < oAuthorNo.length; i++) {
                $('#AuthorNoList  option[value="' + oAuthorNo[i] + '"]').attr('selected', 'selected');
            }
            $("#AuthorNoList").trigger("change");

            var oWorksSizeNo = $('#WorksSizeNo_InputStringHide').val().split(',');
            for (var i = 0; i < oWorksSizeNo.length; i++) {
                $('#WorksSizeNo_InputString  option[value="' + oWorksSizeNo[i] + '"]').attr('selected', 'selected');
            }
            $("#WorksSizeNo_InputString").trigger("change");

            var oAuthorsTagNo = $('#AuthorsTagNo_InputStringHide').val().split(',');
            for (var i = 0; i < oAuthorsTagNo.length; i++) {
                $('#AuthorsTagNo_InputString  option[value="' + oAuthorsTagNo[i] + '"]').attr('selected', 'selected');
            }
            $("#AuthorsTagNo_InputString").trigger("change");

            var oAuthorsGender = $('#AuthorsGender_InputStringHide').val().split(',');
            for (var i = 0; i < oAuthorsGender.length; i++) {
                $('#AuthorsGender_InputString  option[value="' + oAuthorsGender[i] + '"]').attr('selected', 'selected');
            }
            $("#AuthorsGender_InputString").trigger("change");


            var oWorksPropStyle = $('#WorksPropStyle_InputStringHide').val().split(',');
            for (var i = 0; i < oWorksPropStyle.length; i++) {
                $('#WorksPropStyle_InputString  option[value="' + oWorksPropStyle[i] + '"]').attr('selected', 'selected');
            }
            $("#WorksPropStyle_InputString").trigger("change");

            var oWorksWareType = $('#WorksWareTypeList_InputStringHide').val().split(',');
            for (var i = 0; i < oWorksWareType.length; i++) {
                $('#WorksWareTypeList_InputString  option[value="' + oWorksWareType[i] + '"]').attr('selected', 'selected');
            }
            $("#WorksWareTypeList_InputString").trigger("change");


            var oWorksPropOwner = $('#WorksPropOwnerList_InputStringHide').val().split(',');
            for (var i = 0; i < oWorksPropOwner .length; i++) {
                $('#WorksPropOwnerList_InputString  option[value="' + oWorksPropOwner[i] + '"]').attr('selected', 'selected');
            }
            $("#WorksPropOwnerList_InputString").trigger("change");

            var oWorksGenreList = $("#WorksGenreList_InputStringHide").val().split(',');
            for (var i = 0; i < oWorksGenreList.length; i++) {
                $('#WorksGenreList_InputString  option[value="' + oWorksGenreList[i] + '"]').attr('selected', 'selected');
            }
            $("#WorksGenreList_InputString").trigger("change");

            
        });
    </script>

}