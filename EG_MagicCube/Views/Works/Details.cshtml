        </dt>

        <dd>
            @Html.DisplayFor(model => model.PropStyle)
        </dd>

    </dl>
</div>
<p>
    @if (Request.IsAuthenticated)
    {
        @Html.ActionLink("編輯", "Edit", new { id = Model.WorksNo }) <span> | </span>
        if (string.IsNullOrEmpty(Model.PackagesNo))
        {
            @Html.ActionLink("檢視清單", "Index")
        }
        else
        {
            @Html.ActionLink("包裝清單", "Detail_Works", "Package", new { id = Model.PackagesNo }, new AllowHtmlAttribute { })
        }
    }
    else
    {
        @Html.ActionLink("包裝清單", "Detail_Works", "Package", new { id = Model.PackagesNo }, new AllowHtmlAttribute { })
    }

</p>

