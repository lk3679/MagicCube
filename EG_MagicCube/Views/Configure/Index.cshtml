@model EG_MagicCube.Models.ViewModel.ConfigureViewModels

@{
    ViewBag.Title = "系統參數維護";
    Layout = "~/Views/Shared/_Layout.cshtml";
}

<h2>系統參數維護</h2>

@using (Html.BeginForm("Edit", "Configure"))
{
    @Html.AntiForgeryToken()
    
    <div class="form-horizontal">
        <h4></h4>
        <hr />
        @Html.ValidationSummary(true, "", new { @class = "text-danger" })
        <div class="form-group">
            
            <div class="col-md-12">
                @Html.LabelFor(model => model.EmptyContent, htmlAttributes: new { @class = "" })<br />
                @Html.TextAreaFor(model => model.EmptyContent, new { htmlAttributes = new { @class = "form-control" } })
                @Html.ValidationMessageFor(model => model.EmptyContent, "", new { @class = "text-danger" })
            </div>
        </div>

        <div class="form-group">
            
            <div class="col-md-12">
                @Html.LabelFor(model => model.ErrorContent, htmlAttributes: new { @class = "" })<br />
                @Html.TextAreaFor(model => model.ErrorContent, new { htmlAttributes = new { @class = "form-control" } })
                @Html.ValidationMessageFor(model => model.ErrorContent, "", new { @class = "text-danger" })
            </div>
        </div>

        <div class="form-group">
            
            <div class="col-md-12">
                @Html.LabelFor(model => model.OpenDays, htmlAttributes: new { @class = "" })<br />
                @Html.EditorFor(model => model.OpenDays, new { htmlAttributes = new { @class = "form-control" } })
                @Html.ValidationMessageFor(model => model.OpenDays, "", new { @class = "text-danger" })
            </div>
        </div>

        <div class="form-group">
            <div class="col-md-offset-2 col-md-10">
                <input type="submit" value="Save" class="btn btn-default" />
            </div>
        </div>
    </div>
}

@section Scripts {
<script src="@Url.Content("~/Scripts/ckeditor/ckeditor.js")"></script>
<script src="@Url.Content("~/Scripts/ckeditor/adapters/jquery.js")"></script>
    <script>
        CKEDITOR.replace('EmptyContent');
        CKEDITOR.replace('ErrorContent');
    </script>
}