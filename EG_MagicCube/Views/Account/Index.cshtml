@model IEnumerable<EG_MagicCube.Models.AccountModel>

@{
    ViewBag.Title = "帳號列表";
    Layout = "~/Views/Shared/_Layout.cshtml";
}

<h2>帳號列表</h2>
<p>
    @Html.ActionLink("新增帳號", "Create", null, new { @class = "btn btn-success" })
</p>

<table class="table">
    <tr>
        <th>
            @Html.DisplayNameFor(model => model.Name)
        </th>
        <th>
            @Html.DisplayNameFor(model => model.UserAccount)
        </th>
        <th>
            @Html.DisplayNameFor(model => model.RoleNo)
        </th>
        <th></th>
    </tr>

    @foreach (var item in Model)
    {
        <tr>


            <td>
                @Html.DisplayFor(modelItem => item.Name)
            </td>
            <td>
                @Html.DisplayFor(modelItem => item.UserAccount)
            </td>
            <td>
                @Html.DisplayFor(modelItem => item.RoleNo)
            </td>


            <td>
                <div>
                    @Html.ActionLink("編輯", "Edit", new { id = item.UserAccountsNo })
                </div>
                @*|@Html.ActionLink("刪除", "Delete", new {  id= item.UserAccountsNo })*@
            </td>
        </tr>
    }

</table>
