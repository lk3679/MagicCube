@model Dictionary<long, string>
<link href="https://cdnjs.cloudflare.com/ajax/libs/ekko-lightbox/5.2.0/ekko-lightbox.css" rel="stylesheet" />
<style>
    .modal-dialog {
        margin-top: 120px;
    }
</style>
<h2>圖片列表</h2>
<div class="">
    <div>
        @Html.ActionLink("返回作品列表", "Index", "Works", null, new { @class = "btn btn-warning" })
    </div>
    <div class="col-lg-12 col-md-12 col-sm-12 col-xs-12  text-right">
        <input type="button" id="delete-btn" class="btn btn-danger" value="刪除">
    </div>
    @using (Html.BeginForm("Create", "Files", FormMethod.Post, new { enctype = "multipart/form-data", id = "CreateFiles" }))
    {
        <div class="form-group">
            <div class="col-md-10">
                <input type="hidden" name="id" value="@ViewBag.pn" />
                <input type="file" name="Img" multiple accept="image/*" />
                @*<img id="imgPreview" style="max-width: 150px;" />*@
            </div>
        </div>
    }

    <div class="row fileupload-buttonbar">
        <div class="col-lg-7">
            <!-- The fileinput-button span is used to style the file input field as button -->
            <span class="btn btn-success fileinput-button">
                <i class="glyphicon glyphicon-plus"></i>
                <span>Add files...</span>
                <input type="file" name="files[]" multiple="">
            </span>
            <button type="submit" class="btn btn-primary start">
                <i class="glyphicon glyphicon-upload"></i>
                <span>Start upload</span>
            </button>
            <button type="reset" class="btn btn-warning cancel">
                <i class="glyphicon glyphicon-ban-circle"></i>
                <span>Cancel upload</span>
            </button>
            <button type="button" class="btn btn-danger delete">
                <i class="glyphicon glyphicon-trash"></i>
                <span>Delete</span>
            </button>
            <input type="checkbox" class="toggle">
            <!-- The global file processing state -->
            <span class="fileupload-process"></span>
        </div>
        <!-- The global progress state -->
        <div class="col-lg-5 fileupload-progress fade">
            <!-- The global progress bar -->
            <div class="progress progress-striped active" role="progressbar" aria-valuemin="0" aria-valuemax="100">
                <div class="progress-bar progress-bar-success" style="width:0%;"></div>
            </div>
            <!-- The extended global progress state -->
            <div class="progress-extended">&nbsp;</div>
        </div>
        <script id="template-upload" type="text/x-tmpl">
            {% for (var i=0, file; file=o.files[i]; i++) { %}
            <tr class="template-upload fade">
                <td>
                    <span class="preview"></span>
                </td>
                <td>
                    <p class="name">{%=file.name%}</p>
                    <strong class="error text-danger"></strong>
                </td>
                <td>
                    <p class="size">Processing...</p>
                    <div class="progress progress-striped active" role="progressbar" aria-valuemin="0" aria-valuemax="100" aria-valuenow="0"><div class="progress-bar progress-bar-success" style="width:0%;"></div></div>
                </td>
                <td>
                    {% if (!i && !o.options.autoUpload) { %}
                    <button class="btn btn-primary start" disabled>
                        <i class="glyphicon glyphicon-upload"></i>
                        <span>Start</span>
                    </button>
                    {% } %}
                    {% if (!i) { %}
                    <button class="btn btn-warning cancel">
                        <i class="glyphicon glyphicon-ban-circle"></i>
                        <span>Cancel</span>
                    </button>
                    {% } %}
                </td>
            </tr>
            {% } %}
        </script>
    </div>
</div>
<div class="row">
    @if (Model != null && Model.Count > 0)
    {
        foreach (var item in Model)
        {
            @*<div class="col-xs-12 col-sm-6 col-md-4 col-lg-3 ">
                <div style="line-height:250px;">
                    <a href="@Url.Action("img", "Files", new { id=item.Key })" style="width:250px;max-height:250px;line-height:250px;" data-type="image" data-toggle="lightbox" data-gallery="example-gallery" >
                        <img class=".img-responsive img-thumbnail img-fluid" style="max-width:800px;" data-original="@Url.Action("img", "Files", new { id=item.Key })" />
                    </a>
                </div>
                <div>
                    <div class="col-lg-2 col-md-3  col-sm-6 col-xs-3 " style="font-size:55px;">
                        <i class="fa fa-square-o fa-6" aria-hidden="true" value="@Html.Raw(item.Key)"></i>
                    </div>
                </div>
            </div>*@

            <div class="col-xs-12 col-sm-6 col-md-4 col-lg-3 ">
                <div class="col-xs-12 thumbnail">
                    <div id="imgche">
                        <i class="fa fa-check fa-6" aria-hidden="true" value="@Html.Raw(item.Key)"></i>
                    </div>
                    <div class="imgdiv col-xs-12">
                        <img class=".img-responsive" data-original="@Url.Action("img", "Files", new { id=item.Key })" />
                    </div>
                </div>
            </div>
        }
    }
</div>

@section Scripts {
    @Scripts.Render("~/bundles/jqueryval")
    <script src="https://cdnjs.cloudflare.com/ajax/libs/ekko-lightbox/5.2.0/ekko-lightbox.js"></script>
    <script src="https://cdnjs.cloudflare.com/ajax/libs/ekko-lightbox/5.2.0/ekko-lightbox.js.map"></script>
    <script src="@Url.Content("~/Scripts/jquery.lazyload.js")"></script>
    <script>
        $("img").lazyload({
            effect: "fadeIn",
            effectspeed: 1000
        });      
        $(document).on('click', '[data-toggle="lightbox"]', function (event) {
            event.preventDefault();
            $(this).ekkoLightbox();
        });

        //$('input[type="file"]').change(function () {
        //    if (this.files.length > 0) {
        //        $('#CreateFiles').submit();
        //    }
        //});

        $('div.imgdiv').click(function () {
            $(this).parent().toggleClass('selected');
        });

        $('input#delete-btn').click(function () {
            var d = $('div.selected i.fa-check');
            var data = [];
            if (d.length == 0) {
                alert('請選取刪除項目');
                return;
            }
            for (var i = 0; i < d.length; i++) {
                data[i] = $(d[i]).attr('value');
            }
             $.ajax({
                type: "Post",
                url: '@Url.Action("Delete")',
                data: { id: data },
                async: true,
                cache: false,
                dataType: "json",
                success: function (data) {
                    location.reload();
                },
                error: function (viewHTML) {
                    alert("載入異常....");
                }
            });
        });
    </script>
}



